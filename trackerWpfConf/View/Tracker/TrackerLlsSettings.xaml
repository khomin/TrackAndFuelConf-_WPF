<UserControl x:Class="trackerWpfConf.settings.TrackerLlsSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:trackerWpfConf.View.Tracker"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Width="Auto" 
                  HorizontalScrollBarVisibility="Auto" 
                  HorizontalAlignment="Stretch">
        <Grid HorizontalAlignment="Stretch">
            <TabControl x:Name="SettingsTabPanel" HorizontalAlignment="Stretch">
                <TabItem Header="LLS1" mah:ControlsHelper.HeaderFontSize="16">
                    <local:TrackerLlsItem HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="Auto"/>
                </TabItem>
                <TabItem Header="LLS1" mah:ControlsHelper.HeaderFontSize="16">
                    <local:TrackerLlsItem HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="Auto"/>
                </TabItem>
            </TabControl>
        </Grid>
    </ScrollViewer>
</UserControl>
