<UserControl x:Class="trackerWpfConf.settings.TrackerInputSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:trackerWpfConf.settings"
             xmlns:App="clr-namespace:XamlGeneratedNamespace"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" Height="Auto" Width="Auto">
    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  Width="Auto" 
                  HorizontalScrollBarVisibility="Auto" 
                  HorizontalAlignment="Stretch">
        <StackPanel Height="Auto" Width="Auto">
            <GroupBox Header="Line settings" Width="Auto">
                <StackPanel>
                    <Grid Style="{StaticResource GridStyleMarging}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <local:TrackerInputSettingsItem Grid.Row="0"/>
                            <local:TrackerInputSettingsItem Grid.Row="1"/>
                            <local:TrackerInputSettingsItem Grid.Row="2"/>
                        </Grid>
                        </Grid>
                </StackPanel>
            </GroupBox>
        </StackPanel>
    </ScrollViewer>
</UserControl>