<UserControl x:Class="trackerWpfConf.SettingsPannel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:SettingsApp="clr-namespace:trackerWpfConf.settingsTabItems"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto">
    <Grid>
        <TabControl x:Name="SettingsTabPanel">
            <TabItem Header="Communication" mah:ControlsHelper.HeaderFontSize="16">
                <SettingsApp:SettingsCommunication HorizontalAlignment="Left" VerticalAlignment="Top" Height="Auto"/>
            </TabItem>

            <TabItem Header="System" mah:ControlsHelper.HeaderFontSize="16">
            </TabItem>

            <TabItem Header="Inputs/Outputs" mah:ControlsHelper.HeaderFontSize="16">
            </TabItem>

            <TabItem Header="Geofence" mah:ControlsHelper.HeaderFontSize="16">
            </TabItem>

            <TabItem Header="SMS alarm" mah:ControlsHelper.HeaderFontSize="16">
            </TabItem>

        </TabControl>
    </Grid>


</UserControl>
