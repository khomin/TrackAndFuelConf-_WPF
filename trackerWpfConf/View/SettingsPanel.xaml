<UserControl x:Class="trackerWpfConf.SettingsPannel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:SettingsApp="clr-namespace:trackerWpfConf.settingsTabItems"
             mc:Ignorable="d" 
             MinWidth="200" MinHeight="200">
    <Grid>
        <TabControl x:Name="SettingsTabPanel">
            <TabItem Header="Communication">
                <SettingsApp:SettingsCommunication Width="Auto" Height="Auto"/>
            </TabItem>
            
            <TabItem Header="System">
            </TabItem>
            
            <TabItem Header="Inputs/Outputs">
            </TabItem>

            <TabItem Header="Geofence">
            </TabItem>

            <TabItem Header="SMS alarm">
            </TabItem>
            
        </TabControl>
    </Grid>
    

</UserControl>
