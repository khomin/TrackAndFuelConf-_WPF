<Controls:MetroWindow x:Class="trackerWpfConf.MainWindow"
                      xmlns:local="clr-namespace:trackerWpfConf"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:fa="http://schemas.fontawesome.io/icons/"
                      Title="" Width="1100" Height="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!--Pannel settings -->
            <local:SettingsPannel />

            <fa:ImageAwesome x:Name="spinner" Icon="Spinner" SpinDuration="4" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <Button x:Name="buttonTest" Width="100" Height="100" HorizontalAlignment="Center" VerticalAlignment="Center"/>

            <!--Pannel connection-->
            <local:ConnectPannel x:Name="connectPannel" ShowLoadSpinner="{Binding Path=IsEnabled, ElementName=buttonTest, Mode=TwoWay}"/>
            <!--<local:ConnectPannel x:Name="connectPannel" ShowLoadSpinner="{Binding Path=Spin, ElementName=Spinner, Mode=OneWay}"/>-->
            
            <!--Pannel real time data-->
            <!--<RealTime:RealTimePanel Grid.Row="0" Grid.Column="1"/>-->
        </Grid>

        <StatusBar Grid.Row="1">
            <StatusBarItem>Current status</StatusBarItem>
            <StatusBarItem Content="{Binding ElementName=MainTabControl, Path=SelectedItem.Header, Mode=OneWay}" />
        </StatusBar>

    </Grid>

</Controls:MetroWindow>
