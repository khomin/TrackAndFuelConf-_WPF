<Controls:MetroWindow x:Class="trackerWpfConf.View.Main"
                      xmlns:local="clr-namespace:trackerWpfConf"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      Title="Tracker configure" 
                      Width="1100" Height="600"
                      xmlns:ViewBase="clr-namespace:trackerWpfConf.View"
                      xmlns:TrackerView="clr-namespace:trackerWpfConf.View.Tracker"
                      xmlns:Models="clr-namespace:trackerWpfConf.ViewModel"
                      DataContext="{StaticResource MainViewModel}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Frame x:Name="frame" Content="{Binding NavigateContent}" Margin="0,0,0,0"/>

        <StatusBar Grid.Row="1">
            <StatusBarItem>Current status</StatusBarItem>
            <StatusBarItem Content="{Binding ElementName=MainTabControl, Path=SelectedItem.Header, Mode=OneWay}" />
        </StatusBar>
    </Grid>

</Controls:MetroWindow>
